<div class="container">
  <center> 
    <h2><%= t 'views.user.new.change_your_password'%></h2>>
    <div dir="auto">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put })  do |form| %>
        <%= devise_error_messages! %>
        <%= form.hidden_field :reset_password_token %>
                
        <div class="form-field">
          <div class="col-12 col-form-label">
            <div class="form-group row">
              <div class="field">
                <%= form.label :password, t('views.new.new_password' %>
                <% if @minimum_password_length %>      
                <% end %>
                <%= form.text_field :password, autofocus: true, autocomplete: "off", placeholder: "6 character minimum" %>
              </div>
              <div class="col">
                <div class="field">
                  <%= f.label :password_confirmation, t('veiws.new.confirm_new_password') %>
                  <%= f.password_field :password_confirmation, autocomplete: "off" %>
                </div>  
              </div>
            </div>
          </div>
          <div class="actions">
            <%= form.submit t('views.user.new.change_my_password') %>
          </div
            <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>  
  </div>
</div>  



