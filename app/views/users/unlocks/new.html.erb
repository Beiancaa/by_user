<div class="container">
  <center> 
    <h2><%= t 'views.user.new.resend_unlock_instructions'%></h2>
    <div dir="auto">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post })  do |form| %>
        <center><%= devise_error_messages! %></center>
                
        <div class="form-field">
          <div class="col-12 col-form-label">
            <div class="field">
              <%= form.label :email %>
              <%= form.text_field :email, autofocus: true, autocomplete: "email"%>
            </div>
          </div>
          <div class="actions">
            <%= form.submit t('views.user.new.resend_unlock_instructions') %>
          </div>
            <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>  
  </div>
</div>  
