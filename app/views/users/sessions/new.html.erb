<div class="container">
  <center> 
    <h2><%= t 'views.user.new.log_in'%></h2>
    <div dir="auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
        <%= devise_error_messages! %>
                
        <div class="form-field">
          <div class="col-12 col-form-label">
            <div class="form-group row"> 
              <div class="field">
                <%= form.label :email %>
                <%= form.text_field :email, id: :user_name %>
              </div>
              <div class="col">
                <div class="field">
                  <%= form.label :password %>
                  <%= form.password_field :password, autocomplete: "off" %>
                </div>  
              </div>
            </div>
          </div>
          <div class="col-12">              
            <div class="col">
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%=t('views.user.new.remember_me')%>
                  <%= form.check_box :remember_me %>                  
                </div>
              <% end -%>
            </div>
          </div> 
             
          <div class="actions">
            <%= form.submit t('views.user.new.log_in') %>
          </div>
            <%= link_to t('views.user.new.forgot_your_password?'), new_password_path(resource_name) %></br>
            <%= link_to t('views.user.new.sign_up'), new_registration_path(resource_name) %><br />
            <%= link_to t('views.user.new.didnot_receive_confirmation_instructions?'), new_confirmation_path(resource_name) %>
          </div>  
        </div>
      <% end %>
    </div>  
  </div>
</div>  

